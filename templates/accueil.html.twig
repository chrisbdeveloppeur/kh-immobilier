{% extends 'base.html.twig' %}

{% set total_loyers = 0 %}
{% set total_loyers_percus = 0 %}
{% set total_loyers_attentes = 0 %}
{% set nb_quittances_payed = 0  %}
{% set nb_quittances_not_payed = 0  %}
{% set nb_quittances_partial = 0  %}
{% for quittance in quittances %}
    {% set total_loyers = total_loyers + quittance.loyerTtc %}
    {% if quittance.payed %}
        {% set total_loyers_percus = total_loyers_percus + quittance.loyerTtc %}
        {% set nb_quittances_payed = nb_quittances_payed + 1 %}
    {% else %}
        {% set total_loyers_attentes = total_loyers_attentes + quittance.loyerTtc %}
        {% set nb_quittances_not_payed = nb_quittances_not_payed + 1 %}
    {% endif %}
{% endfor %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-lg-8 order-0">
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="d-flex align-items-end row">
                            <div class="col-sm-7">
                                <div class="card-body">
                                    <h5 class="card-title text-primary">Bienvenue sur votre espace personnel {{ app.user.firstname }}</h5>
                                    <p class="mb-4">
                                        Les status de vos biens sont régularisés
                                    </p>

                                    <!--
                                    <a href="javascript:;" class="btn btn-sm btn-outline-primary">View Badges</a>
                                    -->
                                </div>
                            </div>
                            <div class="col-sm-5 text-center text-sm-left">
                                <div class="card-body pb-0 px-0 px-md-4">
                                    <img
                                            src="{{ asset('img/illustrations/man-with-laptop-light.png') }}"
                                            height="140"
                                            alt="View Badge User"
                                            data-app-dark-img="illustrations/man-with-laptop-dark.png"
                                            data-app-light-img="illustrations/man-with-laptop-light.png"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    {% for bien_immo in biens_immos|slice(0,2) %}
                        {% set last_quittance = bien_immo.quittances|sort((a, b) => a.date <=> b.date)|last %}
                        {{ include('includes/bien_card.html.twig') }}
                    {% endfor %}
                    {{ include('includes/new_bien_card.html.twig') }}
                </div>

            </div>
            <!-- Loyers -->
            <div class="col-12 col-lg-4 order-2 mb-4">

                {% set break = false %}
                {% for bien_immo in biens_immos %}
                    {% if bien_immo.quittances|length > 0 %}
                        {% set break = true %}
                    {% endif %}
                {% endfor %}
                {{ include('includes/block_loyers.html.twig') }}

            </div>
            <!--/ Loyers -->

            <div class="col-12 col-md-8 col-lg-4 order-3 order-md-2">
                <div class="row h-100">
                    <div class="col-12 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                                    <span class="badge bg-label-success rounded">
                                                        <i class='bx bxs-coin-stack'></i>
                                                    </span>
                                    <div class="dropdown">
                                        <button
                                                class="btn p-0"
                                                type="button"
                                                id="cardOpt4"
                                                data-bs-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false"
                                        >
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt4">
                                            <a class="dropdown-item" href="javascript:void(0);">View More</a>
                                            <a class="dropdown-item" href="javascript:void(0);">Delete</a>
                                        </div>
                                    </div>
                                </div>
                                <span class="d-block mb-1 text-muted">Total des loyers / Mois</span>
                                <h4 class="card-title text-nowrap mb-2">{{ total_loyers|default(0) }}€</h3>
                                <span class="d-block mb-1 text-muted">Total des loyers perçus</span>
                                <h5 class="text-nowrap mb-2 text-success">{{ total_loyers_percus|default(0) }}€</h5>
                                <span class="d-block mb-1 text-muted">Total des loyers en attentes</span>
                                <h5 class="text-nowrap mb-2 text-danger">{{ total_loyers_attentes|default(0) }}€</h5>
                                {#
                                <small class="text-danger fw-semibold"><i class="bx bx-down-arrow-alt"></i> -14.82%</small>
                                #}
                            </div>
                        </div>
                    </div>
                    <!-- </div>
    <div class="row"> -->
                    <div class="col-12 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between flex-sm-row flex-column gap-3">
                                    <div class="d-flex flex-sm-column flex-row align-items-start justify-content-between">
                                        <div class="card-title">
                                            <h5 class="text-nowrap mb-2">Profile Report</h5>
                                            <span class="badge bg-label-warning rounded-pill">Year 2021</span>
                                        </div>
                                        <div class="mt-sm-auto">
                                            <small class="text-success text-nowrap fw-semibold"
                                            ><i class="bx bx-chevron-up"></i> 68.2%</small
                                            >
                                            <h3 class="mb-0">$84,686k</h3>
                                        </div>
                                    </div>
                                    <div id="profileReportChart"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Statistique des loyers -->
            <div class="col-md-6 col-lg-4 col-xl-4 order-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex align-items-center justify-content-between pb-0">
                        <div class="card-title mb-0">
                            <h5 class="m-0 me-2">Bénéfices</h5>
                            <small class="text-muted">Totale des loyers perçus : {{ total_loyers_percus }}€</small>
                        </div>
                        <div class="dropdown">
                            <button
                                    class="btn p-0"
                                    type="button"
                                    id="orederStatistics"
                                    data-bs-toggle="dropdown"
                                    aria-haspopup="true"
                                    aria-expanded="false"
                            >
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="orederStatistics">
                                <a class="dropdown-item" href="javascript:void(0);">Select All</a>
                                <a class="dropdown-item" href="javascript:void(0);">Refresh</a>
                                <a class="dropdown-item" href="javascript:void(0);">Share</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex flex-column align-items-center gap-1">
                                <h2 class="mb-2">{{ biens_immos|length }}</h2>
                                <span>Nb de Propriétés</span>
                            </div>
                            <div class="is-flex is-flex-direction-column align-items-center">
                                <div id="statistiqueLoyers"></div>
                                <div class="mt-1 has-text-centered">
                                    <a href="{{ path('quittances_index') }}" type="button" class="btn btn-sm btn-outline-primary">
                                        Voir toute les quittances
                                    </a>
                                </div>
                            </div>
                        </div>
                        <p class="h5 mb-3 text-muted">Les dernières quittances</p>
                        <ul class="p-0 m-0">
                            {% for quittance in lastQuittances %}
                                {% if loop.index < 5 %}
                                <li class="d-flex mb-4 pb-1">
                                    <div class="avatar flex-shrink-0 me-3">
                                        <span class="avatar-initial rounded bg-label-primary">
                                            <i class="bx bx-mobile-alt"></i>
                                        </span>
                                    </div>
                                    <div class="d-flex w-100 align-items-center gap-2">
                                        <div class="me-2 w-50">
                                            <h6 class="mb-0 nowrap-text overflow-ellipsis" title="{{ quittance.bienimmo.adresse }}">{{ quittance.bienimmo.adresse }}</h6>
                                            <small class="text-muted" title="Quittance éditée le {{ quittance.createddate|format_date('short') }}">Edité le {{ quittance.createddate|format_date('short') }}</small>
                                        </div>
                                        <div class="user-progress w-25">
                                            <small class="fw-semibold">{{ quittance.loyerttc }}€</small>
                                        </div>
                                    </div>
                                </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <!--/ Order Statistics -->


            <!-- Expense Overview -->
            <div class="col-md-6 col-lg-4 order-5 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <ul class="nav nav-pills" role="tablist">
                            <li class="nav-item">
                                <button
                                        type="button"
                                        class="nav-link active"
                                        role="tab"
                                        data-bs-toggle="tab"
                                        data-bs-target="#navs-tabs-line-card-income"
                                        aria-controls="navs-tabs-line-card-income"
                                        aria-selected="true"
                                >
                                    Income
                                </button>
                            </li>
                            <li class="nav-item">
                                <button type="button" class="nav-link" role="tab">Expenses</button>
                            </li>
                            <li class="nav-item">
                                <button type="button" class="nav-link" role="tab">Profit</button>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body px-0">
                        <div class="tab-content p-0">
                            <div class="tab-pane fade show active" id="navs-tabs-line-card-income" role="tabpanel">
                                <div class="d-flex p-4 pt-3">
                                    <div class="avatar flex-shrink-0 me-3">
                                        <img src="{{ asset('img/icons/unicons/wallet.png') }}" alt="User" />
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Total Balance</small>
                                        <div class="d-flex align-items-center">
                                            <h6 class="mb-0 me-1">$459.10</h6>
                                            <small class="text-success fw-semibold">
                                                <i class="bx bx-chevron-up"></i>
                                                42.9%
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div id="incomeChart"></div>
                                <div class="d-flex justify-content-center pt-4 gap-2">
                                    <div class="flex-shrink-0">
                                        <div id="expensesOfWeek"></div>
                                    </div>
                                    <div>
                                        <p class="mb-n1 mt-1">Expenses This Week</p>
                                        <small class="text-muted">$39 less than last week</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/ Expense Overview -->
        </div>

        <div class="row">

            <!-- Total Revenue -->
            <div class="col-12 col-lg-8 order-2 order-md-3 order-lg-2 mb-4">
                <div class="card">
                    <div class="row row-bordered g-0">
                        <div class="col-md-8">
                            <h5 class="card-header m-0 me-2 pb-3">Total Revenue</h5>
                            <div id="totalRevenueChart" class="px-2"></div>
                        </div>
                        <div class="col-md-4">
                            <div class="card-body">
                                <div class="text-center">
                                    <div class="dropdown">
                                        <button
                                                class="btn btn-sm btn-outline-primary dropdown-toggle"
                                                type="button"
                                                id="growthReportId"
                                                data-bs-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false"
                                        >
                                            2022
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="growthReportId">
                                            <a class="dropdown-item" href="javascript:void(0);">2021</a>
                                            <a class="dropdown-item" href="javascript:void(0);">2020</a>
                                            <a class="dropdown-item" href="javascript:void(0);">2019</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="growthChart"></div>
                            <div class="text-center fw-semibold pt-3 mb-2">62% Company Growth</div>

                            <div class="d-flex px-xxl-4 px-lg-2 p-4 gap-xxl-3 gap-lg-1 gap-3 justify-content-between">
                                <div class="d-flex">
                                    <div class="me-2">
                                        <span class="badge bg-label-primary p-2"><i class="bx bx-dollar text-primary"></i></span>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <small>2022</small>
                                        <h6 class="mb-0">$32.5k</h6>
                                    </div>
                                </div>
                                <div class="d-flex">
                                    <div class="me-2">
                                        <span class="badge bg-label-info p-2"><i class="bx bx-wallet text-info"></i></span>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <small>2021</small>
                                        <h6 class="mb-0">$41.2k</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/ Total Revenue -->

        </div>
    </div>
    <!-- / Content -->

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <!-- Page JS -->
    {% include 'includes/js/dashboards-analytics.html.twig' %}
{% endblock %}
