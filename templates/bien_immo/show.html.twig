{% extends 'base.html.twig' %}

{% block title %}BienImmo{% endblock %}

{% block body %}
    <h1>BienImmo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bien_immo.id }}</td>
            </tr>
            <tr>
                <th>Building</th>
                <td>{{ bien_immo.building }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ bien_immo.street }}</td>
            </tr>
            <tr>
                <th>Cp</th>
                <td>{{ bien_immo.cp }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ bien_immo.city }}</td>
            </tr>
            <tr>
                <th>Loyer_hc</th>
                <td>{{ bien_immo.loyerHc }} €</td>
            </tr>
            <tr>
                <th>Charges</th>
                <td>{{ bien_immo.charges }} €</td>
            </tr>
            <tr>
                <th>Loyer TTC</th>
                <td>{{ bien_immo.loyerHc + bien_immo.charges }} €</td>
            </tr>
        </tbody>
    </table>

    <h2>Locataire(s)</h2>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>First_name</th>
            <th>Last_name</th>
            <th>Gender</th>
            <th>Mode</th>
            <th>Logement</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for locataire in locataires %}
            <tr>
                <td>{{ locataire.id }}</td>
                <td>{{ locataire.firstName }}</td>
                <td>{{ locataire.lastName }}</td>
                <td>{{ locataire.gender }}</td>
                <td>{{ locataire.mode }}</td>
                <td><a href="{{ path('bien_immo_show', {'id': locataire.logement.id}) }}"> {{ locataire.logement }}, {{ locataire.logement.street }}, {{ locataire.logement.cp }} {{ locataire.logement.city }}</a></td>
                <td>
                    <a href="{{ path('locataire_show', {'id': locataire.id}) }}">show</a>
                    <a href="{{ path('locataire_edit', {'id': locataire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Aucun locataire n'est attribué à ce logement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bien_immo_index') }}">back to list</a>

    <a href="{{ path('bien_immo_edit', {'id': bien_immo.id}) }}">edit</a>

    {{ include('bien_immo/_delete_form.html.twig') }}
{% endblock %}
