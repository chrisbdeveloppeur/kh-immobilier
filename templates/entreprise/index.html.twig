{% extends 'base.html.twig' %}

{% block title %}Entreprises{% endblock %}

{% block title_main %}Liste des entreprises{% endblock %}

{% block body %}
<section class="section is-flex-direction-column is-align-items-center">
    <div class="table-container">
        <table class="table is-narrow" style="width: 100%;">
            <thead>
            <tr class="has-text-centered">
                <th class="is-size-7">Actions</th>
                <th class="is-size-7">Titre</th>
                <th class="is-size-7">Propriétaire</th>
                <th class="is-size-7">SIRET</th>
                <th class="is-size-7">N° TVA</th>
            </tr>
            </thead>
            <tbody>
            {% for entreprise in entreprises %}
                <tr class="has-text-centered">
                    <td class="is-size-7">
                        <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}" title="Modifier l'entreprise">
                            <span class="icon">
                                <i class="fas fa-lg fa-pen-square"></i>
                            </span>
                        </a>
                        <a href="{{ path('entreprise_delete', {'id': entreprise.id}) }}" title="Supprimer l'entreprise" onclick="return confirm('Êtes-vous sur de vouloir supprimer cette entreprise ?')">
                            <span class="icon has-text-danger">
                                <i class="far fa-lg fa-trash-alt"></i>
                            </span>
                        </a>
                    </td>
                    <td class="is-size-7">{{ entreprise.name }}</td>
                    <td class="is-size-7">{{ entreprise.users.first }}</td>
                    <td class="is-size-7">{{ entreprise.siret }}</td>
                    <td class="is-size-7">{{ entreprise.tvaNumber }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune entreprises trouvées</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</section>

    <div class="column has-text-centered">
        <a class="button is-small is-light" href="{{ path('entreprise_new') }}">Ajouter une entreprise</a>
    </div>

{% endblock %}
