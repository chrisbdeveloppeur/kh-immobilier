{% extends 'base.html.twig' %}

{% block title %}{{ entreprise.name }}{% endblock %}
{% block title_main %}{{ entreprise.name }}{% endblock %}

{% block body %}
<section class="section is-flex-desktop is-flex-direction-column is-align-items-center">
    <div class="my-3 mx-3">
        <div class="buttons">
            <a class="button is-small is-light" href="{{ path('entreprise_index') }}">Retour à la liste des entreprises</a>
            <a class="button is-small is-light" href="{{ path('entreprise_edit', {'id': entreprise.id}) }}">Modifier cette entreprise</a>
        </div>
    </div>

    <div class="table-container">
        <table class="table">
            <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ entreprise.name }}</td>
            </tr>
            <tr>
                <th>SIRET</th>
                <td>{{ entreprise.siret }}</td>
            </tr>
            <tr>
                <th>N° TVA</th>
                <td>{{ entreprise.tvaNumber }}</td>
            </tr>
            </tbody>
        </table>
    </div>
</section>

    {{ include('entreprise/_delete_form.html.twig') }}
{% endblock %}
