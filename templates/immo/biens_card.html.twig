<div class="card">
    <header class="card-header has-background-dark">
        <p class="card-header-title has-text-light is-justify-content-center">
            {% if bien_immo.locataires is empty %}
                <span class="icon-text has-text-light">
                    <span class="icon">
                      <i class="fas fa-lg fa-home"></i>
                    </span>
                    <span>{{ bien_immo.building }}</span>
                </span>
            {% else %}
                <span class="icon-text has-text-success">
                    <span class="icon">
                      <i class="fas fa-lg fa-house-user"></i>
                    </span>
                    <span>{{ bien_immo.building }}</span>
                </span>
            {% endif %}
        </p>
    </header>
    <div class="card-content has-background-light">
        <div class="content">
            Adresse : <b>{{ bien_immo.street }}, {{ bien_immo.cp }} {{ bien_immo.city }}</b><br>
            Loyer : <b>{{ bien_immo.loyerHc }} €</b><br>
            Charges : <b>{{ bien_immo.charges }} €</b><br>
            Loyer TTC : <b>{{ bien_immo.loyerHc + bien_immo.charges }} €</b><br>
            Locataire :
            {% if bien_immo.locataires.current %}
                <a href="{{ path('locataire_show', {'id': bien_immo.locataires.current.id}) }}" class="tag is-dark">{{ bien_immo.locataires.current.firstName }} {{ bien_immo.locataires.current.lastName }}</a>
            {% else %}
                Sans locataire
            {% endif %}
        </div>
    </div>
    <footer class="card-footer">
        <a href="{{ path('bien_immo_show', {'id': bien_immo.id}) }}" class="card-footer-item has-background-dark has-text-light bg-info-onhover has-text-centered">Gérer ce logement</a>
        {% if bien_immo.locataires is not empty %}
            <a href="{{ path('quittances', {'loc_id': bien_immo.locataires.current.id}) }}" class="card-footer-item has-background-dark has-text-light bg-info-onhover has-text-centered">Editer une quittance</a>
        {% else %}
            <a href="{{ path('bien_immo_edit', {'id': bien_immo.id}) }}" class="card-footer-item has-text-dark has-text-centered">Ajouter un locataire</a>
        {% endif %}
        <a href="{{ path('immo_mail') }}" class="card-footer-item has-background-dark has-text-light bg-info-onhover has-text-centered">Envoyer la quittance</a>
    </footer>
</div>
