{% extends 'base.html.twig' %}

{% block title %}Immobilier{% endblock %}

{% block title_main %}Votre gestion immobilière{% endblock %}

{% block body %}

            <div class="is-flex-desktop is-justify-content-space-between">
                <div class="column has-text-centered-touch">
                    <a href="{{ path('bien_immo_index') }}" class="button is-dark bg-info-onhover">Vos biens</a>
                    <a href="{{ path('locataire_index') }}" class="button is-dark bg-info-onhover">Vos locataires</a>
                </div>
                <div class="column has-text-centered-touch has-text-right-desktop">
                    <a href="{{ path('bien_immo_new') }}" class="button is-dark bg-info-onhover">Ajouter un bien</a>
                    <a href="{{ path('locataire_new') }}" class="button is-dark bg-info-onhover">Ajouter un locataire</a>
                </div>
            </div>
            <div class="column is-flex-desktop is-align-items-center is-flex-direction-column">

                    {% set total_loyer_ttc = 0 %}
                    {% set total_loyer_hc = 0 %}
                    {% set total_charges = 0 %}
                    {% for bien_immo in bien_immos %}
                        {% set total_loyer_ttc =  total_loyer_ttc + (bien_immo.loyerHc + bien_immo.charges) %}
                        {% set total_loyer_hc =  total_loyer_hc + bien_immo.loyerHc %}
                        {% set total_charges =  total_charges + bien_immo.charges %}
                            <div class="column is-two-fifths-widescreen">
                                {{ include('immo/biens_card.html.twig') }}
                            </div>
                    {% else %}

                        <span>Vous n'avez aucun Biens immobiliers enreggistrés</span>

                    {% endfor %}

{#                            {{ total_loyer_hc }} €#}

{#                            {{ total_charges }} €#}

{#                            {{ total_loyer_ttc }} €#}

            </div>

{% endblock %}
