{% import 'includes/macros.html.twig' as macros %}
<div class="col-12 col-lg-4 col-sm-12 col-md-12 mb-4">
    <div class="card h-100">
        <div class="card-body">
            <div class="card-title d-flex align-items-start justify-content-between">
                <div class="avatar flex-shrink-0 me-3">
                    {{ macros.quittance_status_payed_btn(last_quittance|default(null)) }}
                </div>
                <div class="dropdown">
                    <button
                            class="btn p-0"
                            type="button"
                            id="cardOpt4"
                            data-bs-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false"
                    >
                        <i class="bx bx-dots-vertical-rounded"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt4">
                        <a class="dropdown-item {% if not last_quittance %}disabled{% endif %}" {% if last_quittance %}href="{{ path('quittances_render_quittance', {'quittance_id': last_quittance.id}) }}"{% endif %}>Voir la dernière quittance</a>
                        <a class="dropdown-item" href="{{ path('quittances_index', {'bien_id': bien_immo.id}) }}">Voir les quittances</a>
                        <a class="dropdown-item" href="{{ path('bien_immo_edit', {'id': bien_immo.id}) }}">Détails du bien</a>
                    </div>
                </div>
            </div>
            <span class="d-block mb-1">{{ bien_immo }}</span>
            <h3 class="card-title text-nowrap mb-2">€{{ bien_immo.loyerTtc }}</h3>
            <small class="text-info fw-semibold" title="Payement du loyer prévus tout les {{ bien_immo.echeance }} du mois"><i class="bx bx-calendar"></i>{{ bien_immo.echeance|format_number({min_integer_digit: 2}) }} {{ 'now'|format_date(pattern='MMMM', locale='fr') }}</small>
        </div>
    </div>
</div>
