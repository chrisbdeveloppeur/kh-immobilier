{% import 'includes/macros.html.twig' as macros %}
<div class="col-12 col-lg-6 col-sm-12 col-md-12 mb-4">
    <div class="card">
        <div class="card-body">
            <div class="card-title d-flex align-items-start justify-content-between">
                <div class="avatar flex-shrink-0 me-3">
                    {% if last_quittance %}
                        {{ macros.quittance_status_payed_btn(last_quittance) }}
                    {% elseif bien_immo.locataire %}
{#                        <a href="{{ path('quittances_edit_new_quittance', {'loc_id': bien_immo.locataire.id }) }}" class="badge bg-label-danger rounded" title="aucune quittances de loyer trouvées"><i class='bx bxs-file'></i></a>#}
                        <span class="d-inline-block"
                              tabindex="0"
                              data-bs-toggle="popover"
                              data-bs-offset="0,14"
                              data-bs-placement="top"
                              data-bs-trigger="hover focus"
                              data-bs-content="aucune quittances de loyer trouvées">
                            <a href="{{ path('quittances_edit_new_quittance', {'loc_id': bien_immo.locataire.id }) }}" class="button is-small bg-label-danger rounded" type="button" disabled>
                                <i class='bx bxs-file'></i>
                            </a>
                        </span>
                    {% endif %}
                </div>
                <div class="dropdown">
                    <button
                            class="btn p-0"
                            type="button"
                            id="cardOpt4"
                            data-bs-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false"
                    >
                        <i class="bx bx-dots-vertical-rounded"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt4">
                        <a class="dropdown-item" href="javascript:void(0);">Voir les quittances</a>
                        <a class="dropdown-item" href="{{ path('bien_immo_edit', {'id': bien_immo.id}) }}">Détails</a>
                    </div>
                </div>
            </div>
            <span class="d-block mb-1">{{ bien_immo }}</span>
            <h3 class="card-title text-nowrap mb-2">€{{ bien_immo.loyerTtc }}</h3>
            <small class="text-info fw-semibold" title="Payement du loyer prévus tout les {{ bien_immo.echeance }} du mois"><i class="bx bx-calendar"></i>{{ bien_immo.echeance|format_number({min_integer_digit: 2}) }} {{ 'now'|format_date(pattern='MMMM', locale='fr') }}</small>
        </div>
    </div>
</div>
