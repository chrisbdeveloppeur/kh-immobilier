{% set months =
    {
        1:'Janvier',
        2:'Févier',
        3:'Mars',
        4:'Avril',
        5:'Mai',
        6:'Juin',
        7:'Juillet',
        8:'Août',
        9:'Septembre',
        10:'Octobre',
        11:'Novembre',
        12:'Décembre',
    }
%}
<div class="col-12 mb-4">
    <div class="card h-100">
        <div class="card-header">
            Status des loyer {{ 'now'|format_date(pattern='Y') }}
        </div>
        <div class="tab-content">
            <div class="table-responsive text-start overflow-hidden perfect-scrollbar ps">
                <table class="table table-sm table-borderless">
                    <thead>
                        <tr>
                            <th>Bien immo</th>
                            {% for month in months %}
                                <th class="has-text-centered">
                                    {{ month }}
                                </th>
                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for bien in biens_immos %}
                            <tr>
                                <td>
                                    <span data-bs-toggle="tooltip"
                                          data-bs-offset="0,4"
                                          data-bs-placement="top"
                                          data-bs-html="true"
                                          title="<small>{{ bien }}</small>"
                                    >
                                        {{ bien|u.truncate(10, '...') }}
                                    </span>
                                </td>
                                {% for month in months %}
                                    <td class="has-text-centered">
                                        {% for quittance in bien.quittances %}
                                            {% if quittance.month == month and quittance.year == 'now'|format_date(pattern='Y') and quittance.payed %}
                                                <span class="badge badge-center rounded-pill is-badge-small bg-success"
                                                      data-bs-toggle="tooltip"
                                                      data-bs-offset="0,4"
                                                      data-bs-placement="top"
                                                      data-bs-html="true"
                                                      title="<small>Loyer payé</small>"
                                                >
                                                    <i class='bx bx-check'></i>
                                                </span>
                                            {% else %}
                                                <span class="badge badge-center rounded-pill bg-label-secondary"
                                                      data-bs-toggle="tooltip"
                                                      data-bs-offset="0,4"
                                                      data-bs-placement="top"
                                                      data-bs-html="true"
                                                      title="<small>Loyer en attente</small>"
                                                >
                                                    <i class='bx bx-x'></i>
                                                </span>
                                            {% endif %}
                                        {% endfor %}
                                    </td>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="card-title d-flex gap-2 align-items-center">

            </div>
            {#
            <h1 class="display-1 card-title text-nowrap mb-2 has-text-centered text-primary">{{ total_loyers_percus_current_month|number_format(0,',','')|default(0) }}€</h1>
        #}
        </div>
    </div>
</div>
