<div class="col-12 mb-4">
    <div class="card h-100">
        <div class="card-body">
            <div class="card-title d-flex gap-2 align-items-center">
                <span class="badge bg-label-primary">
                    <i class='bx bxs-building-house'></i>
                </span>
                <span class="d-block text-muted">Nombre de biens immobiliers</span>
            </div>
            <div class="has-text-centered align-items-center justify-content-center is-flex is-flex-direction-column">
                <h1 class="display-1 card-title text-nowrap mb-2 has-text-centered text-primary">{{ biens_immos|length|default(0) }}</h1>
                {% if total_biens_vides > 0 %}
                    <small class="text-muted">
                        Dont {{ total_biens_vides }} {% if total_biens_vides == 1 %}logement libre{% else %}logements libres{% endif %}
                    </small>
                {% endif %}
            </div>
        </div>
        <div class="card-footer is-justify-content-end">
            <a href="{{ path('bien_immo_index') }}"
               class="button btn-primary btn-sm"
               data-bs-toggle="tooltip"
               data-bs-offset="0,4"
               data-bs-placement="top"
               data-bs-html="true"
               title="<small>Voir la liste des biens</small>"
            >
                <i class='bx bx-list-ul'></i>
            </a>
        </div>
    </div>
</div>
