{# Affichage des messages flash #}
{% for type, message_list in app.flashes %}
    {% for message in message_list %}

        <div class="column flash-msg" style="z-index: 9999">

            <div class="bs-toast toast fade show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <span class="badge badge-center rounded-pill bg-{{ type }} border-label-{{ type }} p-3 me-2">
                        <i class="bx bx-md bx-info-circle bx-burst"></i>
                    </span>
                    <div class="me-auto fw-semibold">Informations</div>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    {{ message|raw }}
                </div>
            </div>
        </div>

    {% endfor %}
{% endfor %}

