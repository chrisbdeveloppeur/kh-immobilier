{# Affichage des messages flash #}
{% for type, message_list in app.flashes %}
    {% for message in message_list %}

        <div class="column is-flex is-justify-content-center is-align-items-center remove-timer-5s" style="position: fixed;bottom: 0;z-index: 100;width: 100%;opacity: .9">
            <article class="message column px-0 py-0 is-one-third is-small is-{{ type }} has-text-centered flash-msg">
                <div class="message-header">
                <span class="icon has-text-light">
                    <i class="fas fa-lg fa-info-circle"></i>
                </span>
                    <button class="delete" aria-label="delete" onclick="this.parentElement.parentElement.parentElement.removeChild(this.parentElement.parentElement);" ></button>
                </div>
                <div class="message-body">
                    {{ message|raw }}
                </div>
            </article>
        </div>

    {% endfor %}
{% endfor %}

