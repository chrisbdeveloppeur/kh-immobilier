{# Affichage des messages flash #}
{% for type, message_list in app.flashes %}
    {% for message in message_list %}

        <div class="column flash-msg">
            <div class="alert alert-{{ type }} alert-dismissible d-flex flash-msg" role="alert" style="width: min-content">
                <span class="badge badge-center rounded-pill bg-{{ type }} border-label-{{ type }} p-3 me-2"><i class="bx bx-md bx-info-circle"></i></span>
                <h6>{{ message|raw }}</h6>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                </button>
            </div>
        </div>

    {% endfor %}
{% endfor %}

