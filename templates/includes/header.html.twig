            <div class="navbar-brand">
                <a href="{{ path('home') }}" class="navbar-item">Menue principal</a>
                    <span class="navbar-burger" data-target="navbarMenuHeroC" onclick="this.classList.toggle('is-active');document.getElementById('navbarMenu').classList.toggle('is-active')">
