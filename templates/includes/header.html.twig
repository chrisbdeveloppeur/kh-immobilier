    <header class="navbar is-light is-fixed-top">
        <div class="container has-text-centered">
            <div class="navbar-brand">
                <a href="{{ path('home') }}" class="navbar-item">
                    <span class="icon pr-2">
                        <i class="fas fa-lg fa-home"></i>
                    </span>
                    <span>
                        Menu principal
                    </span>
                </a>
                <a role="button" class="navbar-burger" data-target="navbarMenuHeroC" onclick="this.classList.toggle('is-active')">
                    <span></span>
                    <span></span>
                    <span></span>
                </a>
            </div>

            <div id="navbarMenu" class="navbar-menu is-size-5-mobile">

                <div class="navbar-start">

                    <a href="{{ path('immo_accueil') }}" class="navbar-item is-light">
                        <span class="icon-text">
                            <span class="icon">
                              <i class="fas fa-city"></i>
                            </span>
                            <span>Immobilier</span>
                        </span>
                    </a>

                    {% if is_granted("ROLE_SUPER_ADMIN") %}
                        <a href="{{ path('entreprenariat_home') }}" class="navbar-item is-light">
                            <span class="icon-text">
                                <span class="icon">
                                  <i class="fas fa-user-tie"></i>
                                </span>
                                <span>Entreprenariat</span>
                            </span>
                        </a>
                    {% endif %}

                </div>

                <div class="navbar-end">
                    {% if is_granted("ROLE_SUPER_ADMIN") %}

                        <div class="navbar-item has-dropdown">
                            <span class="icon-text navbar-link">
                                <span class="icon">
                                  <i class="fas fa-users-cog"></i>
                                </span>
                                <span>Gestionnaires</span>
                            </span>

                            <div class="dropdown-trigger">
                                <div class="navbar-dropdown is-size-5-mobile">
