{% if locataires|length == 0 %}
    <div class="is-flex-desktop is-flex-direction-column is-align-items-center">
        <div class="column is-flex is-justify-content-center is-align-items-center is-flex-direction-column box-shadow-bulma has-background-info border-radius-2px">
                    <span class="icon-text px-3 py-2 has-text-light is-flex is-justify-content-center is-align-items-center " style="line-height: normal">
                        <span class="icon">
                            <i class="fas fa-info-circle"></i>
                        </span>
                        <span>
                            <b>Vous n'avez aucun locataire enregistrés</b>
                        </span>
                    </span>
            <a href="{{ path('locataire_new') }}#logement" class="button is-small is-info is-light">Ajouter un locataire</a>
        </div>
    </div>
{% else %}
    <div class="overflow-scroll perfect-scrollbar table-responsive">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>
                        {{ knp_pagination_sortable(locataires, 'Genre', 'gender') }}
                    </th>
                    <th>
                        {{ knp_pagination_sortable(locataires, 'Nom', 'last_name') }}
                    </th>
                    <th>
                        {{ knp_pagination_sortable(locataires, 'Prénom', 'first_name') }}
                    </th>
                    <th>
                        {{ knp_pagination_sortable(locataires, 'Email', 'email') }}
                    </th>
                    <th>
                        {{ knp_pagination_sortable(locataires, 'Tel', 'phone') }}
                    </th>
                    <th>
                        {{ knp_pagination_sortable(locataires, 'Logement', 'logement') }}
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
            {% for locataire in locataires %}
                <tr>
                    <td>
                        <span class="text-info-onhover">
                            <span class="text-index-entity">
                                {% if locataire.gender is defined and locataire.gender == 'M.' %}
                                    <span class="badge rounded-pill bg-warning"
                                          data-bs-toggle="tooltip"
                                          data-bs-offset="0,4"
                                          data-bs-placement="top"
                                          data-bs-html="true"
                                          title="<small>Masculin</small>"
                                    >
                                        <i class='bx bx-xs bx-male-sign'></i>
                                    </span>
                                {% elseif locataire.gender == 'Mme.' %}
                                    <span class="badge rounded-pill bg-info"
                                          data-bs-toggle="tooltip"
                                          data-bs-offset="0,4"
                                          data-bs-placement="top"
                                          data-bs-html="true"
                                          title="<small>Féminin</small>"
                                    >
                                        <i class='bx bx-xs bx-female-sign'></i>
                                    </span>
                                {% else %}
                                    <span class="badge rounded-pill bg-label-secondary"
                                          data-bs-toggle="tooltip"
                                          data-bs-offset="0,4"
                                          data-bs-placement="top"
                                          data-bs-html="true"
                                          title="<small>Non cummuniqué</small>"
                                    >
                                        <i class='bx bx-xs bx-question-mark'></i>
                                    </span>
                                {% endif %}
                            </span>
                        </span>
                    </td>
                    <td class="">
                        <span class="text-info-onhover">
                            <span class="text-index-entity">
                                {{ locataire.lastname }}
                            </span>
                        </span>
                    </td>
                    <td class="">
                        <span class="text-info-onhover">
                            <span class="text-index-entity">
                                {{ locataire.firstname }}
                            </span>
                        </span>
                    </td>
                    <td class="">
                        <span class="text-info-onhover">
                            <span class="text-index-entity">
                                {{ locataire.email }}
                            </span>
                        </span>
                    </td>
                    <td class="">
                        <span class="text-info-onhover">
                            <span class="text-index-entity">
                                {{ locataire.phone }}
                            </span>
                        </span>
                    </td>
                    <td class="">
                        <span class="text-info-onhover">
                            <span class="text-index-entity">
                                {{ locataire.logement }}
                            </span>
                        </span>
                    </td>
                    <td>
                        <div class="btn-group btn-group-xs" role="group" aria-label="Basic radio toggle button group">
                            <a type="button" class="btn btn-light" href="{{ path('locataire_edit', {'id': locataire.id}) }}"
                               data-bs-toggle="tooltip"
                               data-bs-offset="0,4"
                               data-bs-placement="top"
                               data-bs-html="true"
                               title="<small>Modifier le locataire</small>"
                            >
                                <i class='bx bx-xs bxs-edit-alt'></i>
                            </a>

                            {% if not locataire.logement %}
                                <span class="d-inline-block"
                                      tabindex="0"
                                      data-bs-toggle="popover"
                                      data-bs-offset="0,14"
                                      data-bs-trigger="hover focus"
                                      data-bs-placement="top"
                                      data-bs-html="true"
                                      data-bs-content="<small>Le locataire n'a pas de logement attribué</small>"
                                ></span>
                            {% endif %}
                            <a type="button" class="btn btn-light {% if not locataire.logement %}disabled{% endif %}" href="{{ path('quittances_edit_new_quittance', {'loc_id': locataire.id}) }}"
                               data-bs-toggle="tooltip"
                               data-bs-offset="0,4"
                               data-bs-placement="top"
                               data-bs-html="true"
                               title="<small>Éditer une quittance</small>"
                            >
                                <i class='bx bx-xs bxs-file'></i>
                            </a>

                            <a type="button" class="btn btn-danger" href="{{ path('locataire_delete', {'id': locataire.id}) }}" onclick="return confirm('Etes-vous sur de vouloir supprimer définitivement ce locataire?');"
                               data-bs-toggle="tooltip"
                               data-bs-offset="0,4"
                               data-bs-placement="top"
                               data-bs-html="true"
                               title="<small>Supprimer le locataire</small>"
                            >
                                <i class='bx bx-xs bxs-trash'></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="15" class=" is-size-6">
                            <span>
                                <i>Vide...</i>
                            </span>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="column ">
        <a href="{{ path('locataire_new') }}" class="btn mb-2 btn-outline-primary">
            <span class="tf-icons bx bx-sm bxs-user-plus me-1"></span>
            <span>
                Ajouter un locataire
            </span>
        </a>
    </div>
{% endif %}
