{% set quittances = bienImmo.quittances %}
{% if quittances|length == 0 and locataire %}
        {% set message_txt = 'Vous n\'avez aucun quittances éditées pour ce logement' %}
        {% set btn_url = path('quittances_edit_new_quittance', {'loc_id': locataire.id}) %}
        {% set btn = "<a href='"~btn_url~"' class='btn is-small btn-primary'>Editer une quittance dès maintenant</a>" %}
    <div class="alert alert-primary" role="alert">
        <div class="d-flex">
            <span class="badge badge-center rounded-pill bg-primary border-label-primary p-3 me-2"><i class="bx bx-lg bx-info-circle"></i></span>
            <h6 class="alert-heading d-flex align-items-center fw-bold mb-1">Pour votre information...</h6>
        </div>
        <div class="d-flex flex-column">
            <p class="has-text-centered">{{ message_txt|raw }}</p>
            {{ btn|raw }}
        </div>
    </div>
{% else %}

    {% if not locataire %}
        {% set message_txt = 'Ce bien ne possède pas de locataire<br> vous pouvez en ajouter un depuis la page d\'édition du logement' %}
        {% set btn_url = path('bien_immo_edit', {'id': bienImmo.id}) %}
        {% set btn = "<a href='"~btn_url~"' class='btn is-small btn-primary'>Ajouter un locataire</a>" %}
        <div class="alert alert-primary" role="alert">
            <div class="d-flex">
                <span class="badge badge-center rounded-pill bg-primary border-label-primary p-3 me-2"><i class="bx bx-lg bx-info-circle"></i></span>
                <h6 class="alert-heading d-flex align-items-center fw-bold mb-1">Pour votre information...</h6>
            </div>
            <div class="d-flex flex-column">
                <p class="has-text-centered">{{ message_txt|raw }}</p>
                {{ btn|raw }}
            </div>
        </div>
    {% else %}
        <div class="">
            <table class="table table-hover">
                <thead class="table-warning">
                <tr>
                    <th>
                        <span>
                            Année
                        </span>
                    </th>
                    <th>
                        <span>
                            Mois
                        </span>
                    </th>
                    <th>
                        <span>
                            Statut
                        </span>
                    </th>
                    <th>
                        <span>
                            Date d'édition
                        </span>
                    </th>
                    <th>
                        <span>Actions</span>
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for quittance in quittances %}
                    <tr>

                        <td>
                            {{ quittance.year }}
                        </td>

                        <td>
                            {{ quittance.month }}
                        </td>

                        <td>
                            {% if quittance.payed %}
                                <span class="badge bg-success">Payée</span>
                            {% else %}
                                <span class="badge bg-warning">En attente</span>
                            {% endif %}
                        </td>

                        <td>
                            {{ quittance.createddate|format_date('short') }}
                        </td>

                        <td>
                            <div class="dropstart">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                                <div class="dropdown-menu">
                                    <a href="{{ asset('documents/quittances/') }}{{ quittance.filename }}.pdf" class="dropdown-item" download="{{ quittance.month }}_{{ quittance.year }}.pdf" title="télécharger la quittance {{ quittance.month }} {{ quittance.year }}">
                                        <span class="tf-icons bx bx-download me-1"></span>
                                        Télécharger la quittance
                                    </a>
                                    <a href="{{ path('quittances_quittance_payed', {'id': quittance.id}) }}" class="dropdown-item">
                                        <span class="tf-icons bx bx-money-withdraw me-1"></span>
                                        Changer le statut de la quittance
                                    </a>
                                    <a class="dropdown-item" href="{{ path('quittances_delete_quittance', {'quittance_id': quittance.id}) }}" title="Supprimer la quittance" onclick="return confirm('Etes-vous sur de vouloir supprimer définitivement cette quittance?');">
                                        <i class="bx bx-trash me-2"></i>
                                        Supprimer
                                    </a>
                                </div>
                            </div>
{#                            <a class="dropdown-item" href="{{ path('quittances_delete_quittance', {'quittance_id': quittance.id}) }}" title="Supprimer la quittance" onclick="return confirm('Etes-vous sur de vouloir supprimer définitivement cette quittance?');"><i class="bx bx-trash me-2"></i>Supprimer</a>#}
{#                            <a href="{{ path('quittances_quittance_payed', {'id': quittance.id}) }}" class="btn mb-2 btn-outline-primary">#}
{#                                <span class="tf-icons bx bx-sm bx-money-withdraw me-1"></span>#}
{#                                Changer le statut de la quittance#}
{#                            </a>#}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot class="table-active">

                </tfoot>
            </table>
        </div>
    {% endif %}

    {% if locataire is defined and locataire %}
    <div class="column ">
        <a href="{{ path('quittances_edit_new_quittance', {'loc_id': locataire.id}) }}" class="btn mb-2 btn-outline-primary">
            <span class="tf-icons bx bx-sm bxs-file-plus me-1"></span>
            <span>
                Editer une quittance
            </span>
        </a>
    </div>
    {% endif %}

{% endif %}