{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <!-- Content -->
  {% if error %}
    <div class="tag is-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
    <div class="container-xxl">
      <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
          <!-- Register -->
          <div class="card">
            <div class="card-body">
              <!-- Logo -->
              <div class="app-brand justify-content-center">
                <a href="index.html" class="app-brand-link gap-2">
                  <span class="app-brand-logo demo">

                  </span>
                  <span class="app-brand-text demo text-body fw-bolder">King d'Home<br>Immobilier</span>
                </a>
              </div>
              <!-- /Logo -->
              <!--
              <h4 class="mb-2">Welcome to Sneat! ðŸ‘‹</h4>
              -->
              <p class="mb-4">Veuillez indiquez vos identifiants de connexion</p>

              <form class="mb-3" method="POST">
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input
                          type="email"
                          value="{{ last_username }}"
                          name="email"
                          id="inputEmail"
                          class="form-control input is-small has-text-centered"
                          autocomplete="email"
                          required
                          autofocus>
                </div>
                <div class="mb-3 form-password-toggle">
                  <div class="d-flex justify-content-between">
                    <label class="form-label" for="password">Mot de passe</label>
                    <a href="auth-forgot-password-basic.html">
                      <small>Forgot Password?</small>
                    </a>
                  </div>
                  <div class="input-group input-group-merge">
                    <input
                            type="password"
                            name="password"
                            id="inputPassword"
                            class="form-control input is-small has-text-centered"
                            autocomplete="current-password"
                            placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                            required
                    >
                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                  </div>
                </div>
                <div class="mb-3">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="remember-me" />
                    <label class="form-check-label" for="remember-me"> Remember Me </label>
                  </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="mb-3">
                  <button class="btn btn-primary d-grid w-100" type="submit">Se connecter</button>
                </div>
              </form>

              <p class="text-center">
                <span>New on our platform?</span>
                <a href="auth-register-basic.html">
                  <span>Create an account</span>
                </a>
              </p>
            </div>
          </div>
          <!-- /Register -->
        </div>
      </div>
    </div>

    <!-- / Content -->
{% endblock %}
