{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block nav_aside %}{% endblock %}
{% block body %}
    <!-- Content -->
    <div class="container-xxl zindex-0" style="z-index: 0 !important;">
      <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">

          {% if error %}
            <div class="alert alert-danger alert-dismissible">
              {{ error.messageKey|trans(error.messageData, 'security') }}
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
              </button>
            </div>
          {% endif %}

          <!-- Register -->
          <div class="card">
            <div class="card-body">
              <!-- Logo -->
              <div class="is-flex justify-content-center">
                <a href="/" class="app-brand-link gap-2">
                  <span class="app-brand-logo demo">
                      <img style="width: 300px" src="{{ asset('images/KH_NOIR_SANS-FOND.png') }}" alt="">
                  </span>
                </a>
              </div>
              <!-- /Logo -->

              <p class="mb-4 has-text-centered">Connectez vous avec vos identifiants</p>

              <form class="mb-3" method="POST">
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input
                          type="email"
                          value="{{ last_username }}"
                          name="email"
                          id="inputEmail"
                          class="form-control input has-text-centered"
                          autocomplete="email"
                          required
                          autofocus>
                </div>
                <div class="mb-3 form-password-toggle">
                  <div class="d-flex justify-content-between">
                    <label class="form-label" for="password">Mot de passe</label>
                    <a href="auth-forgot-password-basic.html">
                      <small>Mot de passe oublié ?</small>
                    </a>
                  </div>
                  <div class="input-group input-group-merge">
                    <input
                            type="password"
                            name="password"
                            id="inputPassword"
                            class="form-control input has-text-centered"
                            autocomplete="current-password"
                            placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                            required
                    >
                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                  </div>
                </div>

{#                <div class="mb-3">#}
{#                  <div class="form-check">#}
{#                    <input class="form-check-input" type="checkbox" id="remember-me" />#}
{#                    <label class="form-check-label" for="remember-me"> Se souvenir de moi </label>#}
{#                  </div>#}
{#                </div>#}

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="mb-3">
                  <button class="btn btn-primary d-grid w-100" type="submit">Se connecter</button>
                </div>
              </form>

              <p class="text-center">
                <span>Vous n'avez pas encore de compte ?</span>
                <a href="{{ path('app_register') }}">
                  <span>Créer mon compte</span>
                </a>
              </p>
            </div>
          </div>
          <!-- /Register -->
        </div>
      </div>
    </div>

    <!-- / Content -->
{% endblock %}
