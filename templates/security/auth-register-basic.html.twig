{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}
{% block nav_aside %}{% endblock %}
{% block body %}
    <!-- Content -->
  <div class="container-xxl zindex-0" style="z-index: 0 !important;">
    <div class="authentication-wrapper authentication-basic container-p-y">
      <div class="authentication-inner">

        {% if not registrationForm.vars.valid %}
            <div class="alert alert-danger alert-dismissible" role="alert">
              Le formulaire contient des erreurs
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
              </button>
            </div>
        {% endif %}

        <!-- Register Card -->
        <div class="card">
          <div class="card-body">
            <!-- Logo -->
            {% include 'includes/logo_home.html.twig' %}
            <!-- /Logo -->

            <p class="mb-4 has-text-centered">Création de votre compte kingd'home immobilier</p>

            {{ form_start(registrationForm) }}

              <div class="mb-3">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email) }}
                {% if registrationForm.email.vars.errors %}
                  <div class="form-text text-danger">
                    {{ form_errors(registrationForm.email) }}
                  </div>
                {% endif %}
              </div>

              <div class="mb-3">
                {{ form_label(registrationForm.lastName) }}
                {{ form_widget(registrationForm.lastName) }}
                {% if registrationForm.lastName.vars.errors %}
                  <div class="form-text text-danger">
                    {{ form_errors(registrationForm.lastName) }}
                  </div>
                {% endif %}
              </div>

              <div class="mb-3">
                {{ form_label(registrationForm.firstName) }}
                {{ form_widget(registrationForm.firstName) }}
                {% if registrationForm.firstName.vars.errors %}
                  <div class="form-text text-danger">
                    {{ form_errors(registrationForm.firstName) }}
                  </div>
                {% endif %}
              </div>

              <div class="mb-3">
                {{ form_label(registrationForm.phoneNumber) }}
                {{ form_widget(registrationForm.phoneNumber) }}
                {% if registrationForm.phoneNumber.vars.errors %}
                  <div class="form-text text-danger">
                    {{ form_errors(registrationForm.phoneNumber) }}
                  </div>
                {% endif %}
              </div>

              <div class="mb-3 form-password-toggle">
                {{ form_label(registrationForm.plainPassword.first) }}
                <div class="input-group input-group-merge">
                  {{ form_widget(registrationForm.plainPassword.first) }}
                  <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                </div>
                {% if registrationForm.plainPassword.first.vars.errors %}
                  <div class="form-text text-danger">
                    {{ form_errors(registrationForm.plainPassword.first) }}
                  </div>
                {% endif %}
              </div>

              <div class="mb-3 form-password-toggle">
                {{ form_label(registrationForm.plainPassword.second) }}
                <div class="input-group input-group-merge">
                  {{ form_widget(registrationForm.plainPassword.second) }}
                  <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                </div>
                {% if registrationForm.plainPassword.second.vars.errors %}
                  <div class="form-text text-danger">
                    {{ form_errors(registrationForm.plainPassword.first) }}
                  </div>
                {% endif %}
              </div>

              <div class="mb-3">
                <div class="form-check">
{#                  <input class="form-check-input" type="checkbox" id="terms-conditions" name="terms" />#}
                  {{ form_widget(registrationForm.termes) }}
                  <label class="form-check-label" for="registration_form_termes">
                    J'accepte la
                    <a href="javascript:void(0);">politique de confidentialité et les conditions</a>
                  </label>
                </div>
              </div>
              <button class="btn btn-primary d-grid w-100">S'inscrire</button>

            {{ form_end(registrationForm) }}

            <p class="text-center mt-3">
              <span>Vous avez déjà un compte ?</span>
              <a href="{{ path('app_login') }}">
                <span>Connectez-vous</span>
              </a>
            </p>
          </div>
        </div>
        <!-- Register Card -->
      </div>
    </div>
  </div>

    <!-- / Content -->
{% endblock %}
