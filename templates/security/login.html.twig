{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block title_main %}Connexion Ã  votre espace{% endblock %}

{% block body %}
    <div class="is-flex is-justify-content-center is-align-items-center">
        <form class="column is-half" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="field">
                <p class="control has-icons-left has-icons-right">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input" autocomplete="email" required autofocus>
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <p class="control has-icons-left">
                    <input type="password" name="password" id="inputPassword" class="form-control input" autocomplete="current-password" required>
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="field has-text-centered">
                <p class="control">
                    <button class="button is-success">
                        Se connecter
                    </button>
                </p>
            </div>

            {#
            <label for="inputEmail">Email</label>

            <label for="inputPassword">Password</label>
            #}



            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

        </form>
    </div>

{% endblock %}
