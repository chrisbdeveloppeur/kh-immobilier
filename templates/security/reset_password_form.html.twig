{% extends 'base.html.twig' %}

{% block title %}Changer votre mot de passe{% endblock %}
{% block nav_aside %}{% endblock %}
{% block body %}

    <!-- Content -->
    <div class="container-xxl zindex-0" style="z-index: 0 !important;">
      <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">

          {% if error is defined and error%}
            <div class="alert alert-danger alert-dismissible">
              <span>{{ error.message }}</span>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
          </button>
        </div>
        {% endif %}

          <div class="card">
            <div class="card-body">
              <!-- Logo -->
                {% include 'includes/logo_home.html.twig' %}
              <!-- /Logo -->

              <p class="mb-4 has-text-centered">Réinitialiser votre mot de passe utilisateur</p>

              {{ form_start(form) }}

              <div class="mb-3 form-password-toggle">
                {{ form_label(form.plainPassword.first) }}
                <div class="input-group input-group-merge">
                  {{ form_widget(form.plainPassword.first) }}
                  <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                </div>
                {% if form.plainPassword.first.vars.errors %}
                  <div class="form-text text-danger">
                    {{ form_errors(form.plainPassword.first) }}
                  </div>
                {% endif %}
              </div>

              <div class="mb-3 form-password-toggle">
                {{ form_label(form.plainPassword.second) }}
                <div class="input-group input-group-merge">
                  {{ form_widget(form.plainPassword.second) }}
                  <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                </div>
                {% if form.plainPassword.second.vars.errors %}
                  <div class="form-text text-danger">
                    {{ form_errors(form.plainPassword.first) }}
                  </div>
                {% endif %}
              </div>

              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

              <div class="mb-3">
                <button class="btn btn-primary d-grid w-100" type="submit">Valider</button>
              </div>

              {{ form_end(form) }}

{#              <p class="text-center mt-3">#}
{#                <span>Vous avez déjà un compte ?</span>#}
{#                <a href="{{ path('app_login') }}">#}
{#                  <span>Connectez-vous</span>#}
{#                </a>#}
{#              </p>#}
            </div>
          </div>

        </div>
      </div>
    </div>

    <!-- / Content -->
{% endblock %}
