{% import 'includes/macros.html.twig' as macros %}
<div class="card accordion-item active">
    <h2 class="accordion-header" id="headingBase">
        <button type="button" class="accordion-button is-size-5 has-text-weight-bold" data-bs-toggle="collapse" data-bs-target="#accordionBase" aria-expanded="true" aria-controls="accordionBase" role="tabpanel">
            Informations du Bien
        </button>
    </h2>

    <div id="accordionBase" class="accordion-collapse collapse show" data-bs-parent="#accordionMain">
        <div class="accordion-body">
            <div class="col-xxl">
                {% if form is defined %}
                    {{ macros.form_template(form) }}
                {% endif %}
            </div>
        </div>
    </div>
</div>