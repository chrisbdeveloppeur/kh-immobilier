{% block form_errors %}
        {% if errors|length > 0 %}
            <ul>
                {% for error in errors %}
                    <li>
                        <span class="icon-text">
                            <span class="icon has-text-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                            </span>
                            <span>{{ error.message }}</span>
                        </span>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
{% endblock form_errors %}