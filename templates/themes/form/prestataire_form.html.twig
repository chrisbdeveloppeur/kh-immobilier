{{ form_start(form_prestataire, {'attr': {'class': 'column is-two-fifths has-background-light border-radius-2px box-shadow-bulma '~ form_prestataire.vars.name, 'id': 'form_prestataire', 'onsubmit':'isLoading(this)'} }) }}

                {% for child in form_prestataire %}
                    <div class="field">
                        {% if 'token' not in form_label(child) %}
                            <div class="label is-size-7">
                                {{ form_label(child) }}
                            </div>
                        {% endif %}

                        {% if child.vars.block_prefixes[1] == 'choice' %}
                            <div class="select is-small is-fullwidth">
                                {{ form_widget(child) }}
                            </div>
                        {% elseif child.vars.name in ['email'] %}
                            <div class="field has-addons">
                                <div class="control is-expanded">
                                    {{ form_widget(child) }}
                                </div>
                                <p class="control">
                                    <a class="button is-small is-info">
                                    <span class="icon">
                                        <i class="fas fa-lg fa-envelope"></i>
                                    </span>
                                    </a>
                                </p>
                            </div>
                        {% elseif child.vars.name in ['phone'] %}
                            <div class="field has-addons">
                                <div class="control is-expanded">
                                    {{ form_widget(child) }}
                                </div>
                                <p class="control">
                                    <a class="button is-small is-info">
                                    <span class="icon">
                                        <i class="fas fa-lg fa-phone"></i>
                                    </span>
                                    </a>
                                </p>
                            </div>
                        {% else %}
                            {{ form_widget(child) }}
                        {% endif %}

                        {% if form_help(child) %}
                            <span class="help is-info mt-0">
                                <span class="icon-text" style="flex-wrap: nowrap">
                                    <span class="icon">
                                        <i class="fas fa-info-circle"></i>
                                    </span>
                                    <span>{{ form_help(child) }}</span>
                                </span>
                             </span>
                        {% endif %}

                        {% if form_errors(child) %}
                            <span class="tag is-danger">
                                {{ form_errors(child) }}
                            </span>
                        {% endif %}

                        {% for sub_child in child.children %}
                            {% if form_errors(sub_child) %}
                                <span class="tag is-danger">
                                    {{ form_errors(sub_child) }}
                                </span>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endfor %}

{% if app.request.get('_route') == 'bien_immo_edit' %}
    <div class="field has-text-centered">
        <button class="button is-info is-small btn-submit">
        <span class="icon">
            <i class="fas fa-lg fa-save"></i>
        </span>
            <span>Enregistrer le prestataire</span>
        </button>
    </div>
{% else %}
    <div class="field has-text-centered">
        <button class="button is-success is-small btn-submit">
        <span class="icon">
            <i class="fas fa-lg fa-check"></i>
        </span>
            <span>Valider les modifications</span>
        </button>
    </div>
{% endif %}

{{ form_end(form_prestataire) }}
